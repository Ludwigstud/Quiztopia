						"url": {
							"raw": "{{baseUrl}}/quizzes/{{quizId}}/scores",
							"host": ["{{baseUrl}}"],
							"path": ["quizzes", "{{quizId}}", "scores"]
						}
					},
					"response": []
				},
				{
					"name": "Get Leaderboard for Quiz",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/quizzes/{{quizId}}/leaderboard",
							"host": ["{{baseUrl}}"],
							"path": ["quizzes", "{{quizId}}", "leaderboard"]
						}
					},
					"response": []
				}
			]
		}
	],
